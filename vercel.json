{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "components/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/login",
      "dest": "/api/auth.js"
    },
    {
      "src": "/api/ads",
      "dest": "/api/ads.js"
    },
    {
      "src": "/api/upload-ad",
      "dest": "/api/ads.js"
    },
    {
      "src": "/api/delete-ad/(?<id>[^/]+)",
      "dest": "/api/delete-ad/[id].js"
    },
    {
      "src": "/components/decorations/(.*\\.(mp4|css|js|html))",
      "dest": "/components/decorations/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable",
        "content-type": "video/mp4"
      }
    },
    {
      "src": "/admin",
      "dest": "/public/admin/index.html"
    },
    {
      "src": "/admin/js/(.*)",
      "dest": "/public/admin/js/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable",
        "content-type": "application/javascript"
      }
    },
    {
      "src": "/admin/css/(.*)",
      "dest": "/public/admin/css/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/admin/(.*)",
      "dest": "/public/admin/$1"
    },
    {
      "src": "/gen",
      "dest": "/public/gen.html"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000"
  }
} 